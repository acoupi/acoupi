# Date: {{ now }}

{{ celery_bin }} \
    -A {{ app_name }} \
    multi \
    start \
{%- for worker in config.workers %}
    {{ worker.name }} \
{%- if worker.queues %}
    -Q:{{ worker.name }} {{ worker.queues|join(",") }} \
{%- endif %}
{%- if worker.concurrency %}
    -c:{{ worker.name }} {{ worker.concurrency }} \
{%- endif %}
{%- endfor %}
    --pool=threads \
    --loglevel={{ log_level }} \
    --pidfile={{ run_dir }}/%n.pid \
    --logfile={{ log_dir }}/%n%I.log
